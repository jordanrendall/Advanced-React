#after any changes to datamodel, must deploy to prisma (npm run deploy)
#backend

enum Permission {
  ADMIN
  USER
  ITEMCREATE
  ITEMUPDATE
  ITEMDELETE
  PERMISSIONUPDATE
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: String
  permissions: [Permission] @scalarList(strategy: RELATION)
  cart: [CartItem!]!
  updatedAt: DateTime! @updatedAt
  createdAt: DateTime! @createdAt
}

type Item {
  id: ID! @id
  title: String!
  description: String!
  image: String
  largeImage: String
  price: Int!
  user: User!
  updatedAt: DateTime! @updatedAt
  createdAt: DateTime! @createdAt
  # createdAt: DateTime! #only available because of prisma - not in normal graphql
  # updatedAt: DateTime!
  # user: User!
}

type CartItem {
  id: ID! @id
  quantity: Int! @default(value: 1)
  item: Item #relationship to Item
  user: User! #relationship to User
  updatedAt: DateTime! @updatedAt
  createdAt: DateTime! @createdAt
}

type OrderItem {
  id: ID! @id
  title: String!
  description: String!
  image: String!
  largeImage: String!
  price: Int!
  quantity: Int! @default(value: 1)
  user: User
}

type Order {
  id: ID! @id
  items: [OrderItem!]!
  total: Int!
  user: User!
  charge: String!
}
